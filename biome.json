{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".turbo",
			"apps/api/src/infra/generated/**",
			"apps/web/node_modules/**",
			"apps/web/dist",
			"apps/web/.next",
			"apps/web/src/gen/**",
			"apps/web/src/route-tree.gen.ts",
			"apps/web/tsconfig.app.json",
			"apps/web/tsconfig.json",
			"apps/web/openapi.json",
			"apps/web/tsconfig.node.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"useImportType": "off",
				"useTemplate": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
